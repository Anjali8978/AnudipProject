<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/social_media_db</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Sage2020</property>

        <!-- Hibernate dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- Show SQL queries -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Mapping annotated classes -->
        <mapping class="com.Anudip.HibernateProject.SocialMedia_11.User"/>
        <mapping class="com.Anudip.HibernateProject.SocialMedia_11.Post"/>
        <mapping class="com.Anudip.HibernateProject.SocialMedia_11.Comment"/>

    </session-factory>
</hibernate-configuration>
